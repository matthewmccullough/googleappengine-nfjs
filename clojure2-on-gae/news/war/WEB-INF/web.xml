<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<!-- TODO write a macro to produce this, this is SO tedious" -->
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>news.login</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>news.logout</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>savestory</servlet-name>
    <servlet-class>news.savestory</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>viewstory</servlet-name>
    <servlet-class>news.viewstory</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>liststory</servlet-name>
    <servlet-class>news.liststory</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>savestory</servlet-name>
    <url-pattern>/savestory</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>viewstory</servlet-name>
    <url-pattern>/viewstory</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>liststory</servlet-name>
    <url-pattern>/liststory</url-pattern>
  </servlet-mapping>
   
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
